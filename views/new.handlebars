<h1 class="mb-1 restaurant-show-title">新增餐廳</h1>
<div class="container">
  <form action="/restaurants" method="POST">
    <!-- 餐廳名稱、categor -->
    <div class="form-group row">
      <label class="col">
        餐廳中文名稱:
        <input type="text" class="form-control" name="name" placeholder="中文名稱" required>
      </label>
      <label class="col">
        餐廳英文名稱:
        <input type="text" class="form-control" name="name_en" placeholder="English Name" required>
      </label>
    </div>
    <!-- location、phon、rating -->
    <div class="form-group row">
      <label class="col">
        類別:
        <input type="text" class="form-control" name="category" placeholder="美式" required>
      </label>
      <label class="col">
        電話:
        <input type="text" class="form-control" name="phone" placeholder="02 0000 0000" required>
      </label>
    </div>
    <div class="form-group row">
      <label class="col">
        地址:
        <input type="text" class="form-control" name="location" placeholder="地址" required>
      </label>
    </div>
    <div class="form-group row">
      <label class="col">
        Google Map:
        <input type="text" class="form-control" name="google_map" placeholder="Google Map URL" required>
      </label>
    </div>
    <!-- image、google_map、description -->
    <div class="form-group row">
      <label class="col">
        評分:
        <input type="number" class="form-control" name="rating" placeholder="1-5" required>
      </label>
      <label class="col">
        圖片:
        <input type="url" class="form-control" name="image" placeholder="http://example.com/image/image.jpg" required>    
      </label>
    </div>
    <div class="form-group">
      <label>描述</label>
      <textarea class="form-control" name="description" placeholder="description" required></textarea>
    </div>

      <button type="submit" class="btn btn-primary mr-2">新增確認</button>
      <a href="/" class="btn btn-info">取消</a>
  </form>
</div>