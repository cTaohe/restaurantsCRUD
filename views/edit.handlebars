<h1 class="mb-1 restaurant-show-title">修改{{restaurant.name}}</h1>
<div class="container">
  <form action="/restaurants/{{restaurant.id}}" method="POST">
    <!-- 餐廳名稱、categor -->
    <div class="form-group row">
      <label class="col">
        餐廳中文名稱:
        <input type="text" class="form-control" name="name" placeholder="中文名稱" value="{{restaurant.name}}" required>
      </label>
      <label class="col">
        餐廳英文名稱:
        <input type="text" class="form-control" name="name_en" placeholder="English Name" value="{{restaurant.name_en}}" required>
      </label>
    </div>
    <!-- location、phon、rating -->
    <div class="form-group row">
      <label class="col">
        類別:
        <input type="text" class="form-control" name="category" placeholder="美式" value="{{restaurant.category}}" required>
      </label>
      <label class="col">
        電話:
        <input type="text" class="form-control" name="phone" placeholder="02 0000 0000" value="{{restaurant.phone}}" required>
      </label>
    </div>
    <div class="form-group row">
      <label class="col">
        地址:
        <input type="text" class="form-control" name="location" placeholder="地址" value="{{restaurant.location}}" required>
      </label>
    </div>
    <div class="form-group row">
      <label class="col">
        Google Map:
        <input type="text" class="form-control" name="google_map" placeholder="Google Map URL" value="{{restaurant.google_map}}" required>
      </label>
    </div>
    <!-- image、google_map、description -->
    <div class="form-group row">
      <label class="col">
        評分:
        <input type="number" class="form-control" name="rating" placeholder="1-5" value="{{restaurant.rating}}" required>
      </label>
      <label class="col">
        圖片:
        <input type="url" class="form-control" name="image" placeholder="http://example.com/image/image.jpg" value="{{restaurant.image}}" required>    
      </label>
    </div>
    <div class="form-group">
      <label>描述</label>
      <textarea class="form-control" name="description" placeholder="description" required>{{restaurant.description}}</textarea>
    </div>
    <div class="form-group text-center">
      <button type="submit" class="btn btn-primary mr-2">修改確認</button>
      <a href="/" class="btn btn-info">返回</a>
    </div>
  </form>
</div>