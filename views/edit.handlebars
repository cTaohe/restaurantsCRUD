<h1 class="mb-1 restaurant-show-title">修改{{restaurant.name}}</h1>
<div class="container">
  <form action="/restaurants/{{restaurant.id}}" method="POST">
    <!-- 餐廳名稱 -->
    <!-- category -->
    <div class="form-group row">
      <label class="col">
        餐廳中文名稱:
        <input type="text" class="form-control" name="name" placeholder="中文名稱" value="{{restaurant.name}}">
      </label>
      <label class="col">
        餐廳英文名稱:
        <input type="text" class="form-control" name="name_en" placeholder="English Name" value="{{restaurant.name_en}}">
      </label>
    </div>
    <!-- location -->
    <!-- phone -->
    <!-- rating -->
    <div class="form-group row">
      <label class="col">
        類別:
        <input type="text" class="form-control" name="category" placeholder="美式" value="{{restaurant.category}}">
      </label>
      <label class="col">
        電話:
        <input type="text" class="form-control" name="phone" placeholder="02 0000 0000" value="{{restaurant.phone}}">
      </label>
    </div>
    <div class="form-group row">
      <label class="col">
        地址:
        <input type="text" class="form-control" name="location" placeholder="地址" value="{{restaurant.location}}">
      </label>
    </div>
    <div class="form-group row">
      <label class="col">
        Google Map:
        <input type="text" class="form-control" name="google_map" placeholder="Google Map URL" value="{{restaurant.google_map}}">
      </label>
    </div>
    <!-- image -->
    <!-- google_map -->
    <!-- description -->
    <div class="form-group row">
      <label class="col">
        評分:
        <input type="number" class="form-control" name="rating" placeholder="1-5" value="{{restaurant.rating}}">
      </label>
      <label class="col">
        圖片:
        <input type="text" class="form-control" name="image" placeholder="http://example.com/image/image.jpg" value="{{restaurant.image}}">    
      </label>
    </div>
    <div class="form-group">
      <label>描述</label>
      <textarea class="form-control" name="description" placeholder="description">{{restaurant.description}}</textarea>
    </div>

      <button type="submit" class="btn btn-primary mr-2">修改確認</button>
      <a href="/" class="btn btn-danger">取消</a>
  </form>
</div>